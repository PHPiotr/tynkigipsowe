<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
			  addfieldpath="/administrator/components/com_youtubes/models/fields"
	>
		<field name="id" type="text" default="1"
			   readonly="true" class="readonly"
			   label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" class="inputbox"
			   size="40" label="COM_YOUTUBES_FIELD_TITLE_LABEL"
			   description="COM_YOUTUBES_FIELD_TITLE_DESC" required="true" />
			
		<field name="link" type="text" class="inputbox"
			   size="40" label="COM_YOUTUBES_FIELD_LINK_LABEL"
			   description="COM_YOUTUBES_FIELD_LINK_DESC" required="true" />

		<field name="state" type="list"
			   label="JSTATUS" description="COM_YOUTUBES_FIELD_STATE_DESC"
			   class="inputbox span12 small" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field name="ordering" type="ordering" class="inputbox"
			   label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			   description="COM_YOUTUBES_FIELD_LANGUAGE_DESC" class="inputbox span12 small"
		>
			<option value="*">JALL</option>
		</field>

	</fieldset>

</form>
